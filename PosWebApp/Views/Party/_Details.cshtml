@model POS.Models.ViewModel.PartyVM
@{
    ViewBag.Title = "Party";
}
<div class="row">
    <div class="col-md-4">
        @if (Model.Image != null)
        {
            <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Image)" class="img-responsive" width="150" height="150" />
        }
        else
        {
            <img src="~/Images/product.png" class="img-responsive" width="150" height="150" />
        }
    </div>
    <div class="col-md-8">
        <br />
        <h5>
            @Html.Label("Name : ")
            @Html.DisplayFor(model => model.Name)
        </h5>
        <h5>
            @Html.Label("Code : ")
            @Html.DisplayFor(model => model.PreCode)
            @Html.DisplayFor(model => model.Code)
        </h5>
    </div>
</div>
<br /><br />
<div class="form-group row">
    @Html.Label("Type", new { @class = "control-label col-md-4" })
    <span class="control-label col-md-8">
        @if (Model.IsSupplier && Model.IsCustomer)
        {
            @Html.DisplayNameFor(model => model.IsSupplier)
            @Html.DisplayName(" And ")
            @Html.DisplayNameFor(model => model.IsCustomer)
        }
        else if (Model.IsSupplier)
        {
            @Html.DisplayNameFor(model => model.IsSupplier)
        }
        else if (Model.IsCustomer)
        {
            @Html.DisplayNameFor(model => model.IsCustomer)
        }
    </span>
</div>
<div class="form-group row">
    @Html.LabelFor(model => model.Contact, new { @class = "control-label col-md-4" })
    <span class="control-label col-md-8">
        @Html.DisplayFor(model => model.Contact)
    </span>
</div>
<div class="form-group row">
    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-4" })
    <span class="control-label col-md-8">
        @Html.DisplayFor(model => model.Email)
    </span>
</div>
<div class="form-group row">
    @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-4" })
    <span class="control-label col-md-8">
        @Html.DisplayFor(model => model.Address)
    </span>
</div>
<div class="form-group row">
    @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-4" })
    <span class="control-label col-md-8">
        @Html.DisplayFor(model => model.Date)
    </span>
</div>


